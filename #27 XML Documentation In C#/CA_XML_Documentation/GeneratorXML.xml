		<GenerateId>
			<summary>
				<para>
					This Method Use To Generate ID For Employee.
				</para>
				
				<para>
					ID Formate: FL-YY-MM-DD-SS.
				</para>
				
				<list type="bullet">
					<item>
						<term>FL</term>
						<description>
							<b>F</b> : First letter in <paramref name="Fname"/>
								and
							<b>L</b> : First letter in <paramref name="Lname"/>
						</description>
					</item>
					
					
					<item>
						<term>YY</term>
						<desctiption>Year of Hire time</desctiption>
					</item>
					
					
					<item>
						<term>MM</term>
						<description>Month of Hire time</description>
					</item>
					
					
					<item>
						<term>DD</term>
						<description>Day of Hire time</description>
					</item>
					
					
					<item>
						<term>SS</term>
						<description>Sequence number of employee in system</description>
					</item>
					
					
				</list>
				
			</summary>
			
			
			<remarks>
				Id Generated by processing <paramref name="Fname"/>, <paramref name="LName"/> and <paramref name="HTime"/>.
			</remarks>
			
			
			<returns>Employee Id as String</returns>
			
			
			<param name="FName"></param>
			<param name="LName"></param>
			<param name="HTime"></param>
			
			
			<exception cref="System.InvalidOperationException">
				Thrown when <paramref name="FName"/> , <paramref name="LName"/> is null or Empty.
			</exception>
			
			<exception cref="System.InvalidOperationException">
				Thrown when <paramfer name="HTime"/> in past.
			</exception>
			
		</GenerateId>
	</members>
